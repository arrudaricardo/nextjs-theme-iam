{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist/",
    "sourceMap": true,
    "removeComments": true,
    "pretty": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/spec/*.spec.ts",
    "./node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
